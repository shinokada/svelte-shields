{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["ES2020"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}
